{{!
    @template tool_inplacetranslate/stringmodal

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "data": {
            "identifier": "tool_inplacetranslate/exampletext",
            "langs": [
                {
                    "title": "En",
                    "translate": "some English text"
                },
                {
                    "title": "He",
                    "translate": "קצת טקסט בעברית"
                },
                {
                    "title": "Ar",
                    "translate": "بعض النصوص العربية"
                }
            ]
        }
    }
}}

<div class="translates-wrapper">
    <h5 class="translates-langs text-primary">
        {{#str}}availablelangs, tool_inplacetranslate{{/str}} {{#text}} {{lang}}<span class="lang-separator">, </span>{{/text}}
    </h5>
    {{#identifier}}
        <h4 class="identifier text-primary mb-4">
            {{identifier}}/{{plugin}}
        </h4>
    {{/identifier}}
    <form id="translates_form" data-id="{{identifier}}/{{plugin}}" data-current="{{currentlang}}">
        {{#text}}
            <div class="form-group mb-3">
                <label for="{{title}}_translate">{{lang}} {{#str}}original, tool_inplacetranslate{{/str}} {{original}}</label>
                <textarea class="form-control" data-lang="{{lang}}" id="{{lang}}_translate" rows="3">{{string}}</textarea>
            </div>
        {{/text}}
    </form>
</div>