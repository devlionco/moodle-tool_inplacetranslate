{{!
    @template tool_inplacetranslate/stringmenu

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
        {
            "langstrings": [
                {
                    "identifier": "stringone",
                    "component": "core",
                    "text": "some translate text"
                },
                {
                "identifier": "stringtwo",
                    "component": "theme_boost",
                    "text": "some translate text1"
                }
            ]
        }
}}

<div id="inplacetranslate_menu_toggler" role="button" class="bg-primary p-2 rounded-circle text-white shown"
     title="Toggle string's menu">
    <i class="fa fa-language" aria-hidden="true"></i>
    <i class="fa fa-times" aria-hidden="true"></i>
</div>
<div id="inplacetranslate_menu" class="bg-light border border-primary rounded-right">
    <h3 class="inplacetranslate-title text-primary text-center px-3 pt-3 pb-0 mb-0">
        {{#str}}searchandtranslatethewords, tool_inplacetranslate{{/str}}
    </h3>
    <div class="inplacetranslate-inner p-3">
        <div class="inplacetranslate-search-wrapper input-group mb-3">
            <input id="inplacetranslate_search" type="text" class="form-control" placeholder="{{#str}}search, tool_inplacetranslate{{/str}}"
                   aria-label="{{#str}}search, tool_inplacetranslate{{/str}}">
            <div class="input-group-append">
                <button id="inplacetranslate_clear_search_btn"
                        class="btn btn-outline-primary align-items-center justify-content-center d-none" type="button">
                    <i class="fa fa-remove text-primary" aria-hidden="true"></i>
                </button>
            </div>
            <button type="button" aria-label="{{#str}}refresh, tool_inplacetranslate{{/str}}"
                    class="refresh-btn btn btn-outline-secondary align-items-center justify-content-center ml-2"
                    onclick="location.reload();">
                <i class="fa fa-refresh" aria-hidden="true"></i>
            </button>
        </div>
        <div class="inplacetranslate-strings-wrapper">
            <ul class="list-group" id="inplacetranslate_strings_list">
                {{#langstrings}}
                    <li class="list-group-item">
                        <a href="#" class="inplacetranslate-item" data-id="{{identifier}}/{{component}}"
                           data-translate="{{text}}">
                        <span class="identifier italic">
                            {{identifier}}/{{component}}
                        </span>
                            <br>
                            <span class="translate">
                                {{text}}
                            </span>
                        </a>
                    </li>
                {{/langstrings}}
            </ul>
        </div>
    </div>
</div>
{{#js}}
    require(['tool_inplacetranslate/main'], function(main) {
    main.init();
    });
{{/js}}